<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns="http://xmlns.jcp.org/xml/ns/javaee"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_4_0.xsd"
         version="4.0">

    <servlet>
        <servlet-name>ServletListCategory</servlet-name>
        <servlet-class>controllers.admin.category.ServletList</servlet-class>
    </servlet>

    <servlet-mapping>
        <servlet-name>ServletListCategory</servlet-name>
        <url-pattern>/admin/category/list</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>ServletAddCategory</servlet-name>
        <servlet-class>controllers.admin.category.ServletAdd</servlet-class>
    </servlet>

    <servlet-mapping>
        <servlet-name>ServletAddCategory</servlet-name>
        <url-pattern>/admin/category/add</url-pattern>
    </servlet-mapping>

    <servlet-mapping>
        <servlet-name>ServletAddCategory</servlet-name>
        <url-pattern>/admin/category/do-add</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>ServletDeleteCategory</servlet-name>
        <servlet-class>controllers.admin.category.ServletDelete</servlet-class>
    </servlet>

    <servlet-mapping>
        <servlet-name>ServletDeleteCategory</servlet-name>
        <url-pattern>/admin/category/delete</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>ServletEditCategory</servlet-name>
        <servlet-class>controllers.admin.category.ServletEdit</servlet-class>
    </servlet>

    <servlet-mapping>
        <servlet-name>ServletEditCategory</servlet-name>
        <url-pattern>/admin/category/update</url-pattern>
    </servlet-mapping>

    <servlet-mapping>
        <servlet-name>ServletEditCategory</servlet-name>
        <url-pattern>/admin/category/do-edit</url-pattern>
    </servlet-mapping>

</web-app>